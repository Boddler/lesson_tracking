<div class="container-fluid" style="background-color: #465362">
  <div class="holder">
    <div class="info-page">
      <h1>Lessons Updated...</h1>
      <h1 id="menu-btn" data-controller="summary-btn" data-action="click->summary-btn#toggle"><i class="fa-solid fa-list"></i>
        <div id="summary" class="shown" data-summary-btn-target="table">
          <%= render "shared/smry", recent: @recent %>
        </div>
      </h1>
    </div>
    <h6>Here are the results of your most recent check...</h6>
    <table>
      <%= render "shared/table_smry", recent: @recent %>
      <%= render "shared/slot", month: @recent.last(2) %>
      <tr>
      </tr>
      <tr class="invisible-row">
        <td colspan="100%" class="invisible-row" style="border: none">
        </td>
      </tr>
      <tr>
        <th class="month table-top", colspan="100%">
          Detailed Information...
        </th>
      </tr>
      <% @scrapes_array.each do |month| %>
        <%= render "shared/table_hdr1", scrape: month %>
        <%= render "shared/slot", month: month[1] %>
      </tr>
    <% end %>
  </table>
</div>
</div>
