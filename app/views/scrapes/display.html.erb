<div class="container-fluid" style="background-color: #465362">
  <div class="holder">
    <div>
      <h1>Lessons Updated...</h1>
      <p>Here are the results of your most recent check...</p>
      <table>
        <% @scrapes_array.reverse_each do |month| %>
          <%= render "shared/table_hdr1", scrape: month %>
          <tr>
            <th>Date of Change</th>
            <th>Time of Change</th>
            <th>Text</th>
            <th>Code</th>
            <th>Blue?</th>
          </tr>
          <tr>
            <% month[1].reverse.each_with_index do |scrape, scrape_index| %>
              <% scrape.slots.each_with_index do |slot, slot_index| %>
                <% if scrape_index > 0 || slot_index > 0 %>
                  <tr>
                  <% end %>
                  <% if slot_index == 0 %>
                    <td rowspan="<%= scrape.slots.size %>"><%= scrape.created_at.strftime("%Y, %b %e - %H:%M") %></td>
                    <% if scrape.slots.where(updated: true).empty? %>
                      <td class="no-updates">No</td>
                      <td class="no-updates">changes</td>
                      <td class="no-updates">found</td>
                      <td class="no-updates">this</td>
                      <td class="no-updates">update</td>
                    <% end %>
                  <% end %>
                  <% if slot.updated && slot.lesson.booked %>
                    <td><%= slot.lesson.date %></td>
                    <td><%= slot.lesson.time %></td>
                    <td><%= text_title(slot.lesson.text) %></td>
                    <td><%= slot.lesson.code %></td>
                    <td class="<%="blue-lsn" if slot.lesson.blue %>"></td>
                    <% if scrape_index > 0 || slot_index > 0 %>
                    </tr>
                  <% end %>
                <% end %>
                <% lesson = slot.matching_lesson %>
                <% if lesson %>
                  <td class="cancelled"><%= lesson.date %></td>
                  <td class="cancelled"><%= lesson.time %></td>
                  <td class="cancelled"><%= text_title(lesson.text) %></td>
                  <td class="cancelled"><%= lesson.code %></td>
                  <td class="<%="blue-lsn" if lesson.blue %>"></td>
                  <% if scrape_index > 0 || slot_index > 0 %>
                  </tr>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div>
  <div>
    <h1>Monthly Summaries</h1>
    <div>
    </div>
  </div>
</div>
<div class="holder">
</div>
</div>
